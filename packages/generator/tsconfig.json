{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@fws/generator": ["./src/index.ts"],
      "@fws/generator/*": ["./src/*"],
      "@fws/core": ["../core/src/index.ts"],
      "@fws/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "references": [
    { "path": "../core" }
  ]
}

{
  "name": "@fws/renderer",
  "version": "0.0.1",
  "private": true,
  "description": "Terminal ASCII UI (blessed-based)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "spike": "npx tsx src/spike-test.ts",
    "spike:check": "npx tsx src/spike-check.ts"
  },
  "dependencies": {
    "@fws/core": "workspace:*",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.27"
  },
  "files": [
    "dist"
  ]
}

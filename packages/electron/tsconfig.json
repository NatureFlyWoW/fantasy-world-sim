{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@fws/core": ["../core/src/index.ts"],
      "@fws/core/*": ["../core/src/*"],
      "@fws/generator": ["../generator/src/index.ts"],
      "@fws/generator/*": ["../generator/src/*"],
      "@fws/narrative": ["../narrative/src/index.ts"],
      "@fws/narrative/*": ["../narrative/src/*"]
    }
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../generator" },
    { "path": "../narrative" }
  ]
}

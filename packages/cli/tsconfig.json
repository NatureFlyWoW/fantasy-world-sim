{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@fws/cli": ["./src/index.ts"],
      "@fws/cli/*": ["./src/*"],
      "@fws/core": ["../core/src/index.ts"],
      "@fws/core/*": ["../core/src/*"],
      "@fws/generator": ["../generator/src/index.ts"],
      "@fws/generator/*": ["../generator/src/*"],
      "@fws/renderer": ["../renderer/src/index.ts"],
      "@fws/renderer/*": ["../renderer/src/*"],
      "@fws/narrative": ["../narrative/src/index.ts"],
      "@fws/narrative/*": ["../narrative/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../core" },
    { "path": "../generator" },
    { "path": "../renderer" },
    { "path": "../narrative" }
  ]
}

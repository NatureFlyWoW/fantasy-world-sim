{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@fws/core": ["./packages/core/src/index.ts"],
      "@fws/core/*": ["./packages/core/src/*"],
      "@fws/generator": ["./packages/generator/src/index.ts"],
      "@fws/generator/*": ["./packages/generator/src/*"],
      "@fws/renderer": ["./packages/renderer/src/index.ts"],
      "@fws/renderer/*": ["./packages/renderer/src/*"],
      "@fws/narrative": ["./packages/narrative/src/index.ts"],
      "@fws/narrative/*": ["./packages/narrative/src/*"],
      "@fws/cli": ["./packages/cli/src/index.ts"],
      "@fws/cli/*": ["./packages/cli/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
